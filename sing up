  <title>إنشاء حساب</title>
  <style>
    body {
      margin: 0;
      height: 100vh;
      display: flex;
      flex-direction: column;
      justify-content: center;
      align-items: center;
      background: linear-gradient(-45deg, #0f2027, #203a43, #2c5364, #0f2027);
      background-size: 400% 400%;
      animation: gradientMove 12s ease infinite;
      font-family: 'Tahoma', sans-serif;
      color: #fff;
      text-align: center;
    }

    @keyframes gradientMove {
      0% { background-position: 0% 50%; }
      50% { background-position: 100% 50%; }
      100% { background-position: 0% 50%; }
    }

    h1 {
      font-size: 2.5rem;
      margin-bottom: 30px;
      letter-spacing: 3px;
      text-shadow: 0 0 15px #00e6ff, 0 0 30px #00e6ff;
    }

    form {
      display: flex;
      flex-direction: column;
      width: 300px;
    }

    input, select {
      padding: 12px;
      margin: 10px 0;
      border-radius: 20px;
      border: 2px solid #00e6ff;
      background: rgba(0,0,0,0.2);
      color: #fff;
      font-size: 1rem;
      text-align: right;
      outline: none;
      transition: all 0.3s ease;
    }

    input:focus, select:focus {
      background: rgba(0,0,0,0.4);
      box-shadow: 0 0 15px #00e6ff;
      border-color: #00e6ff;
    }

    button {
      margin-top: 20px;
      padding: 12px;
      border-radius: 30px;
      border: 2px solid #00e6ff;
      background: rgba(0,230,255,0.1);
      color: #00e6ff;
      font-size: 1.2rem;
      cursor: pointer;
      transition: all 0.3s ease;
    }

    button:hover {
      background: #00e6ff;
      color: #000;
      box-shadow: 0 0 20px #00e6ff, 0 0 40px #00e6ff;
    }

    .error {
      color: #ff4d4d;
      font-size: 0.9rem;
      margin-top: -5px;
      margin-bottom: 10px;
      text-align: right;
    }

    .success {
      color: #00ffb3;
      font-size: 1rem;
      margin-top: 10px;
    }
  </style>
